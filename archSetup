#!/bin/bash

# Installation + setting up of yay
git clone https://aur.archlinux.org/yay-bin.git
cd yay-bin
makepkg -si
cd

# Installation of apps
sudo pacman -S i3blocks gtklock NetworkManager cava bluetui fzf unzip emptty azote rofi kitty flatpak fastfetch libreoffice python-pywal thefuck btop vim i3blocks base-devel

yay -S localsend-bin swayfx themix-full-git

flatpak install flathub md.obsidian.Obsidian

mkdir scripts
cd scripts

# These apps you can't get directly form the AUR or from the repos, so I curl in the AppImage/Tarball manually
echo ""
echo "kdenlive (Video Editor)"
curl -O -# https://download.kde.org/stable/kdenlive/25.08/linux/kdenlive-25.08.3-x86_64.AppImage
echo ""
echo "SuperTuxKart (Peak Game)"
curl -O -# https://github.com/supertuxkart/stk-code/releases/download/1.5/SuperTuxKart-1.5-linux-x86_64.tar.gz
echo ""
echo "WaterFox (Browser)"
curl -O -# https://cdn1.waterfox.net/waterfox/releases/6.6.6/Linux_x86_64/waterfox-6.6.6.tar.bz2
tar -xf waterfox-6.6.6.tar.bz2
rm waterfox-6.6.6.tar.bz2
cd

# Set up of config files
cp ~/notharibsRice/.vimrc ~/
rm .bashrc # Have to remove the one generated by default
cp ~/notharibsRice/.bashrc ~/

mkdir -p .config
cp -r ~/notharibsRice/configs/sway ~/.config/
cp -r ~/notharibsRice/configs/kitty ~/.config/
cp -r ~/notharibsRice/configs/rofi ~/.config/
cp -r ~/notharibsRice/configs/i3blocks ~/.config/

